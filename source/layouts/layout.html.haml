!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %meta{name: 'description', content: 'Portfolio of work by Ian N. Hirschfeld.'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}

    -#%meta{property: "og:title", content: "#{data.config.title}"}
    -#%meta{property: "og:url", content: "http://retinamacapps.com"}
    -#%meta{property: "og:type", content: "website"}
    -#%meta{property: "og:image", content: "http://retinamacapps.com/images/Icon-256@2x.png"}
    -#%meta{property: "fb:admins", content: "1082730090"}
    -#%meta{property: "og:description", content: "#{data.config.description}"}

    -#%link{rel: "apple-touch-icon-precomposed", sizes: "72x72", href: "/images/Icon-72@2x.png"}
    -#%link{rel: "apple-touch-icon-precomposed", sizes: "114x114", href: "/images/Icon@2x.png"}

    -#= favicon_link_tag '/favicon.ico', type: 'image/x-icon'
    -#%link{rel: "shortcut icon", href: "/favicon.png", type: "image/png"}

    %title #{"#{data.page.title} | " if data.page.title} Ian N. Hirschfeld

    = stylesheet_link_tag 'all'

  %body{class: page_classes}
    #themePrimaryColor
    #themeSecondaryColor
    #topbar
    %canvas#bg-noise
    #page-container
      %a.btn{href: "mailto:contact@ianhirschfeld.com?subject=Let's%20Build%20Something%20Awesome!"} Contact
      %ul#social-list.unstyled
        %li>
          %a.no-underline{href: 'https://github.com/ianhirschfeld', target: '_blank', title: 'Go to my GitHub profile'}
            .social-icon-hex
              %svg#hex-icon-github
              %span.icon-github-circled.icon
            %span.title GitHub
        %li>
          %a.no-underline{href: 'https://twitter.com/ianhirschfeld', target: '_blank', title: 'Go to my Twitter profile'}
            .social-icon-hex
              %svg#hex-icon-twitter
              %span.icon-twitter.icon
            %span.title Twitter
        %li>
          %a.no-underline{href: 'http://www.linkedin.com/in/ianhirschfeld', target: '_blank', title: 'Go to my LinkedIn profile'}
            .social-icon-hex
              %svg#hex-icon-linkedin
              %span.icon-linkedin.icon
            %span.title LinkedIn
      .clear
      %header#page-header
        %a.no-underline{href: '/', title: 'Go back to home'}
          %svg#photo{data: {image: 'images/ianhirschfeld.jpg'}}
        %h1
          %a.no-underline{href: '/', title: 'Go back to home'} Ian N. Hirschfeld
        %nav#page-nav
          %a{href: '/#about', title: 'Learn more about me'} About
          %a{href: '/#work', title: 'Check out my recent work'} Work
          %a{href: '/#contact', title: 'Get in contact with me'} Contact
          %a{href: '#', title: 'Read some of my writing'} Writing
      %article#page-content= yield

    / %script{type: 'text/javascript', src: 'http://code.jquery.com/jquery-latest.min.js'}
    = javascript_include_tag 'all'

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-11359166-4']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
